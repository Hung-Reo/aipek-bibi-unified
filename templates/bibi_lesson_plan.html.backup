<!DOCTYPE html>
<html lang="vi">
<head>
  <script>
    // Thiết lập chế độ giao diện ngay khi tải trang
    (function() {
      const savedUIMode = localStorage.getItem('bibi-ui-mode') || 'modern';
      if (savedUIMode === 'modern') {
        document.documentElement.classList.add('modern-ui');
      }
    })();
  </script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>BiBi Soạn Giáo Án</title>
  <!-- ✅ UPDATED: Use /static paths for unified server -->
  <link rel="stylesheet" href="/static/css/style.css" />
  <link rel="stylesheet" href="/static/css/bibi_grammar_modern.css" />
  <link rel="stylesheet" href="/static/css/lesson-plan.css" />

  <!-- ✅ THÊM CSS STYLES MỚI VÀO TRONG <head> SECTION để mờ các tab chưa xong -->
  <style>
    /* CSS để disable tabs và hiện tooltip */
    .tab-btn.coming-soon {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
        position: relative;
        transition: opacity 0.3s ease;
    }

    .tab-btn.coming-soon::after {
        content: "🚧 Đang phát triển";
        position: absolute;
        bottom: -25px;
        left: 50%;
        transform: translateX(-50%);
        background: #333;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 11px;
        opacity: 0;
        transition: opacity 0.3s ease;
        white-space: nowrap;
        z-index: 1000;
        pointer-events: none;
    }

    .tab-btn.coming-soon:hover::after {
        opacity: 1;
    }

    /* Dark theme support */
    .dark-theme .tab-btn.coming-soon::after {
        background: #555;
        color: #fff;
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <!-- ✅ UPDATED: Use /static paths -->
  <script src="/static/libs/docx.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
  <!-- ✅ UPDATED: Use /static paths -->
  <link rel="stylesheet" href="/static/css/print.css" media="print" />
  <!-- ✅ UPDATED: Use /static paths -->
  <script type="module" src="/static/js/controllers/feedback.js"></script>
</head>
<body>
  <!-- Container cô lập cho UI hiện đại -->
  <div class="bibi-lesson-plan-app" id="bibi-lesson-plan-app">
    <!-- Header mới -->
    <header class="smart-header">
      <div class="header-left">
        <a href="/index.html" class="home-btn">
          <i class="fas fa-home"></i>
          <!-- ✅ UPDATED: Use /static paths -->
          <img src="/static/images/petrusky-logo.png" alt="Pétrus Ký" class="school-logo">
        </a>
        <div class="logo-separator"></div>
        <div class="logo">🤖 BiBi</div>
      </div>
      
      <div class="header-center">
        <div class="search-container">
          <i class="fas fa-search search-icon"></i>
          <input type="text" id="topic-search" placeholder="Tìm kiếm tiêu đề giáo án...">
        </div>
      </div>
      
      <div class="header-right">
        <!-- Chỉ báo RAG -->
        <div id="rag-indicator" class="rag-status" title="Trạng thái kết nối với cơ sở dữ liệu">
          <i class="fas fa-database"></i>
          <span class="rag-status-text">RAG: Đang kiểm tra...</span>
        </div>
        <!-- Nút chuyển đổi giao diện mới -->
        <button id="ui-mode-toggle" class="ui-mode-switch">
          <i class="fas fa-sync-alt"></i>
          <span>Giao diện</span>
        </button>
        <div class="language-selector">
          <button id="lang-vi" class="lang-btn active">🇻🇳</button>
          <button id="lang-en" class="lang-btn">🇬🇧</button>
          <button id="lang-both" class="lang-btn">🇻🇳🇬🇧</button>
        </div>
        <button id="theme-toggle" class="theme-btn">
          <i class="fas fa-moon"></i>
        </button>
      </div>
    </header>

  <!-- Navigation tabs dưới header -->
  <nav class="tabs-navigation">
    <div class="tabs-container">
      <button id="main-tab" class="tab-btn active">
          <i class="fas fa-book"></i>
          <span>Giáo án chính</span>
      </button>
      <button id="supplementary-tab" class="tab-btn">
          <i class="fas fa-list"></i>
          <span>Giáo án tăng tiết</span>
      </button>
      <button id="review-tab" class="tab-btn">
        <i class="fas fa-redo"></i>
        <span>Bài Review</span>
      </button>
      
      <button id="test-tab" class="tab-btn">
        <i class="fas fa-clipboard-check"></i>
        <span>Kiểm tra</span>
      </button>
      
      <button id="extracurricular-tab" class="tab-btn">
        <i class="fas fa-tasks"></i>
        <span>Hoạt động ngoại khóa</span>
      </button>
    </div>
  </nav>

  <!-- Rest of HTML content remains the same but with updated paths... -->
